<!DOCTYPE html>
<html>
  <head>
    <title><%= tito %></title>
    <link rel="stylesheet" href="/css/chartist.css">
    <script src="/js/chartist.js"></script>
    <style>
      html, body {
        background-color: white;
        font-family:"Calibri";
      }
      .ct-chart {
        width:350px;
        height:240px;
      }
      h3 {
        text-align: center;
      }
      .ct-series-a .ct-point, .ct-series-a .ct-line, .ct-series-a .ct-bar, .ct-series-a .ct-slice-donut {
      stroke: <%= colo %>; }

      .ct-series-a .ct-slice-pie, .ct-series-a .ct-slice-donut-solid, .ct-series-a .ct-area {
      fill:<%= colo %>; }
    </style>
  </head>
  <body onload="plotta()">
    <h3><%= tito %></h3>
      <input type=hidden id=pippo value="<%= serie %>" />
      <input type=hidden id=colore value="<%= colo %>" />
      <div class="ct-chart"></div>
    <script>

      function plotta() {
        var mySserie=document.getElementById('pippo').value;
        if(!mySserie) return 0;
        var myserie=mySserie.split(',');
        new Chartist.Line('.ct-chart', 
        {          
          series: [myserie]
        }, 
        {
          fullWidth: true,
          chartPadding: {
            right: 40
          } 
        });
      }
    </script>
  </body>
</html>